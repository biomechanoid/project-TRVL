{% block header %}
    {% set isBlogPage = false %}
    {% block navigation %}
        <header>
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation" data-spy="affix" data-offset-top={% if isBlogPage %}"0"{% else %}"50"{% endif %}>
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href={{ path('dj_route_home') }}>denca & kubo</a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-right" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="{% if not isBlogPage %}active{% endif %}"><a data-scroll href={{ path('dj_route_home') }}>Home</a></li>
                           {#  {% if categories %}
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href={{ path('dj_blog_main') }}>Blog <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        {% for c in categories %}
                                        <li><a data-scroll href={{ path('blog_category',{'category':c.slug}) }}>{{ c.name }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% else %} #}
                                <li class="{% if isBlogPage %}active{% endif %}"><a data-scroll href={{ path('dj_blog_main') }}>Blog</a></li>
                            {# {% endif %} #}
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </header>
    {% endblock navigation %}

    <!--OVERLAY FOR THE PORTFOLIO MENU // DONT' DELETE IF YOU PLAN TO USE THIS OPTION-->
    <div class="container overlay overlay-slidedown">

        <div class="row">

            <div class="overlay-section"></div>

            <div class="col-md-12 ">
                <a class="overlay-close">
                    <br><br>
                    <img class="img-responsive center-block" src={{ asset('bundles/djmain/img/xsep.png') }} alt="close image"  data-toggle="tooltip" title="Close">
                </a>
            </div>
        </div>
    </div>
    <!--end OVERLAY FOR THE PORTFOLIO MENU // DONT' DELETE IF YOU PLAN TO USE THIS OPTION-->


{% endblock header %}

{% block bodyAttributes %}id="bigWrapper" data-spy="scroll" data-target=".navbar-default" data-offset="100"{% endblock bodyAttributes %}
{% block body %}
{% endblock body %}
