{% extends '::base.html.twig' %}
{% block titlePage %}Welcome{% endblock titlePage %}

{% block metaAdd %}
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta name="author" content=""/>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
{% endblock %}


{% block header %}
    {% set isBlogPage = false %}
    {% block navigation %}
        <header>
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation" data-spy="affix" data-offset-top={% if isBlogPage %}"0"{% else %}"50"{% endif %}>
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href={{ path('dj_route_home') }}>denca & kubo</a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-right" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="{% if not isBlogPage %}active{% endif %}"><a data-scroll href={{ path('dj_route_home') }}>{{ 'navigation.main.home' | trans }}</a></li>
                            {# <li class="{% if not isBlogPage %}active{% endif %}"><a data-scroll href={{ path('dj_main_aboutus') }}>About Us</a></li> #}
                            <li class={% if isBlogPage %}active{% endif %}><a data-scroll href={{ path('dj_blog_main') }}>{{ 'navigation.main.blog' | trans }}</a></li>
                            <li class={% if not isBlogPage %}active{% endif %}><a data-scroll href={{ path('dj_main_gallery') }}>{{ 'navigation.main.gallery' | trans }}</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </header>
    {% endblock navigation %}
{% endblock header %}
{% block bodyAttributes %}id="bigWrapper" data-spy="scroll" data-target=".navbar-default" data-offset="100"{% endblock bodyAttributes %}
{% block body %}
{% endblock body %}
{% block footer %}
    <section id="footer" class="dark">
        <div class="bottomLine text-center">
            <div class="backToTop">
                <a data-scroll href="#intro">
                    <i class="fa fa-angle-double-up"></i><br>
                    <h5>{{ 'footer.main.backtotop' | trans }}</h5>
                </a>
            </div>
            <p class="bold">&copy; 2014 Denca and Kubo site.</p><p> All Rights Reserved. </p>
        </div>
    </section>
{% endblock %}

