{% extends sonata_block.templates.block_base %}
{% block block %}
    <section id="intro">
        <div class="black-overlay"></div>
        <div class="container valign">
            {% if settings.title_style == 'default'  %}


                    <div class="row sectionIntro">
                        <div class="col-md-8 col-md-offset-2 text-center">
                            <h2 data-scroll-reveal="enter top move 10px over 1s after 0.2s">
                                <span>{{ settings.title|raw }}</span>
                            </h2>
                        </div>
                    </div>
            {% elseif settings.title_style == 'text'  %}
                    <div class="row">
                        <div class="col-md-12">
                            <img src= {{ asset('bundles/djmain/img/logoWhite.png') }} class="img-responsive center-block introLogo" alt="Intro Logo">
                        </div>
                        <div class="col-md-12 text-center">
                            <h1>{{ settings.title|raw }}</h1>
                        </div>
                        <div class="col-md-12 text-center">
                            <img src={{ asset('bundles/djmain/img/separatorWhite.png') }} class="img-responsive center-block separator" alt="separator">
                        </div>
                        {% if (settings.comment ) %}
                            <div class="col-md-6 col-md-offset-3 text-center">
                                <p>{{ settings.comment|raw }}</p>
                            </div>
                        {% endif %}
                    </div>
            {% endif %}

        </div>

    </section>
     {% if settings.video %}
            <script>
                "use strict";
                if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
                    $.backstretch('bundles/djmain/img/background1.jpg');
                }
                else{
                    $.okvideo({
                        source: "{{ settings.video_url }}",
                        autoplay: true,
                        loop: false,
                        highdef: true,
                        hd: true,
                        adproof: false,
                        volume: 0
                    })
                }
            </script>
        {% else %}
           <script>
                $.backstretch( "{{ settings.image_url }}" );
            </script>
        {% endif %}
{% endblock %}





