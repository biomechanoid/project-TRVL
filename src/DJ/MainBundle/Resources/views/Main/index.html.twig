{% extends "DJMainBundle::layout.html.twig" %}
{% block titlePage %}Welcome{% endblock titlePage %}
{% block body %}
    <section id="intro">
        <div class="black-overlay"></div>
        <div class="container valign">
            <div class="row">
                <div class="col-md-12">
                    <img src= {{ asset('bundles/djmain/img/logoWhite.png') }} class="img-responsive center-block introLogo" alt="Intro Logo">
                </div>
                <div class="col-md-12 text-center">
                    <h1>denca & kubo</h1>
                </div>
                <div class="col-md-12 text-center">
                    <img src={{ asset('bundles/djmain/img/separatorWhite.png') }} class="img-responsive center-block separator" alt="separator">
                </div>
                <div class="col-md-6 col-md-offset-3 text-center">
                    <p>
                        {{   'index.main.paragraph.one' | trans }}
                        <br>
                        {{   'index.main.paragraph.two' | trans }}
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section id="welcome-separator">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-7 col-sm-6 hidden-xs image" >
                    <div class="whiteOverlay"></div>
                    {% if pool['secondary'].media %}
                        {% media pool['secondary'].media, 'medium' with {'alt': 'background'} %}
                    {% else %}
                       <img src={{ asset('bundles/djmain/img/backgroundWelcome.jpg') }} alt="background">
                    {% endif %}
                </div>
                <div class="col-md-5 col-sm-6 col-xs-12 textOverlay text-center">
                    <h1 data-scroll-reveal="enter right move 10px over 1s after 0.2s">{{ 'index.welcome.main' | trans}}</h1>
                    <img src={{ asset('bundles/djmain/img/separatorBlack.png') }} class="img-responsive center-block separator" alt="separator">
                    <p data-scroll-reveal="enter right move 10px over 1s after 0.4s">
                        {{ 'index.about.paragraph' | trans| escape }}
                    </p>
                    <br>
                    <a data-scroll href={{ path('dj_blog_main') }} class="btn btn-default btn-black">{{ 'index.blog.button' | trans}}</a>
                </div>
            </div>
        </div>
    </section>
    <section id="text-separator">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <h2 data-scroll-reveal="enter left move 10px over 1s after 0.2s">{{ 'index.about.main'| trans}}</h2>
                    <img src={{ asset('bundles/djmain/img/lineSeparatorWhite.png') }} class="img-responsive lineSeparator" data-scroll-reveal="enter left move 10px over 1s after 0.3s" alt="separator">
                    <p data-scroll-reveal="enter left move 10px over 1s after 0.3s">
                       {{ 'index.welcome.paragraph' | trans({'@break@':'ttt'}) }}
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@DJMainBundle/Resources/public/js/okvideo.min.js' output='js/compiled/main-video.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        "use strict";
        if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
            $.backstretch('bundles/djmain/img/background1.jpg');
        }
        else{
            $.okvideo({
                source: 'https://www.youtube.com/watch?v=Lg7x1_2eJXQ',
                autoplay: true,
                loop: false,
                highdef: true,
                hd: true,
                adproof: false,
                volume: 0
            })
        }
    </script>
{% endblock javascripts %}

